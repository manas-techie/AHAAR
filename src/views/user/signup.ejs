<head>
	<meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />

	<link
	href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
	rel="stylesheet"
	integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
	crossorigin="anonymous" />
	<style>
		body {
		  background: url("/assets/restaurantimg.jpg");
		  background-size: cover;
		  background-position: center;
		  min-height: 100vh;
		}
		.login-card {
		  background: linear-gradient(
			rgba(223, 37, 223, 0.808),
			rgba(0, 0, 0, 0.582),
			rgba(0, 0, 0, 0.767)
		  );
		  border-radius: 15px;
		  padding: 30px;
		  color: #f5deb3;
		  box-shadow: 0 0 15px rgba(0, 0, 0, 0.5);
		}
		.form-control {
		  background: #fff8f1;
		  color: #000;
		  border-radius: 10px;
		}
		.btn-orange {
		  background-color: #ff4c29;
		  color: white;
		  border-radius: 10px;
		}
		.btn-orange:hover {
		  background-color: #e74220;
		}
		.google-btn {
		  display: flex;
		  align-items: center;
		  gap: 10px;
		  justify-content: center;
		}
	
		/* Make the login card full width on small screens */
		@media (max-width: 576px) {
		  .login-card {
			width: 100% !important;
			border-radius: 0;
		  }
		}


    .flash-message {
  position: fixed;
  top: calc(8vh + 20px); /* Keeps it below the navbar */
  left: 50%;
  transform: translateX(-50%);
  z-index: 1050; /* Ensures it stays on top */
  min-width: 250px;
  max-width: 350px;
  box-shadow: 0 4px 6px rgba(0, 0, 0, 0.2);
}

/* Responsive adjustments */
@media (max-width: 768px) {
  .flash-message {
      max-width: 90vw;
  }
}

	  </style>
	</head>
	
	<body>
    <%- include('../partials/flash.ejs') %>
	  <div class="container-fluid d-flex align-items-center justify-content-center min-vh-100">
		<div class="row w-100 justify-content-center px-3">
		  <div class="col-lg-4 col-md-6 col-12 login-card text-center">
			<h3>SIGN IN TO BOOK<br />YOUR TABLE üçΩÔ∏è</h3>
	
			<form action="/dealer/signup" method="POST">
			  <div class="form-group my-3 text-start">
				<label>Username:</label>
				<input
				  type="text"
				  class="form-control"
				  name="username"
				  placeholder="Username"
				  required />
			  </div>
        <div class="form-group my-3 text-start">
          <label>Email:</label>
          <input
            type="email"
            class="form-control"
            name="email"
            placeholder="Email"
            required />
          </div>
			  <div class="form-group my-3 text-start">
				<label>Password:</label>
				<input
				  type="password"
				  class="form-control"
				  name="password"
				  placeholder="Password"
				  required />
			  </div>
			  <button class="btn btn-orange w-100 my-2">Sign Up</button>
			</form>
	
			<div class="my-2">
			  <a href="/auth/google" class="btn btn-outline-light w-100 google-btn">
				<img src="https://img.icons8.com/color/16/000000/google-logo.png" />
				Google Sign Up
			  </a>
			</div>
	
			<div class="mt-3">
			  <a href="/dealer/login" class="btn btn-warning w-100 text-dark">
				Already have an Account? Sign Up
			  </a>
			</div>
		  </div>
		</div>
	  </div>
	
	  <script
		src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
		crossorigin="anonymous">
	  </script>
	</body>


  <script>
    document.addEventListener("DOMContentLoaded", function () {
  let flashMessage = document.querySelector(".flash-message");
  if (flashMessage) {
    setTimeout(() => {
      let bsAlert = new bootstrap.Alert(flashMessage);
      bsAlert.close();
    }, 3000); // Hide after 3 seconds
  }
});
  </script>