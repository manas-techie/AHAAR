<% layout('layout/boilerplate.ejs') %>


<style>
    body {
      background-color: #f9f9f9;
      font-family: 'Segoe UI', sans-serif;
      color: #000;
      margin: 0;
      padding: 0;
    }
  
    .qr-container {
      max-width: 400px;
      margin: 40px auto;
      padding: 20px;
      text-align: center;
      background-color: #fff;
    }
  
    h2 {
      font-size: 1.5rem;
      font-weight: bold;
      margin-bottom: 5px;
    }
  
    .subtext {
      color: #666;
      font-size: 0.9rem;
      margin-bottom: 20px;
    }
  
    .bank-info {
      font-size: 1.1rem;
      font-weight: 600;
      margin-bottom: 10px;
    }
  
    .badge {
      background-color: #198754;
      color: white;
      border-radius: 10px;
      font-size: 0.75rem;
      padding: 2px 8px;
      margin-left: 6px;
    }
  
    .indicator {
      margin: 10px auto;
      width: 20px;
      height: 6px;
      background: #a84dd1;
      border-radius: 10px;
    }
  
    .qr-box {
      background-color: #fff;
      padding: 15px;
      border-radius: 16px;
      box-shadow: 0 0 10px rgba(0,0,0,0.1);
      margin: 10px auto 20px;
      display: inline-block;
    }
  
    .qr-box img {
      width: 200px;
      height: 200px;
    }
  
    .action-buttons {
      display: flex;
      justify-content: space-evenly;
      margin: 20px 0;
    }
  
    .action-buttons button {
      border: none;
      background: none;
      color: #6c2bd9;
      font-weight: 500;
      display: flex;
      align-items: center;
      gap: 6px;
      cursor: pointer;
    }
  
    .upi-section {
      text-align: left;
      margin-top: 10px;
      border-top: 1px solid #ddd;
      padding-top: 15px;
    }
  
    .upi-header {
      display: flex;
      justify-content: space-between;
      font-weight: 500;
      color: #444;
      margin-bottom: 10px;
    }
  
    .upi-list {
      background: #f1f1f1;
      border-radius: 10px;
      padding: 12px;
      margin-bottom: 10px;
      position: relative;
      color: #333;
      font-size: 0.95rem;
    }
  
    .upi-list small {
      color: gray;
      font-size: 0.75rem;
    }
  
    .copy-btn {
      position: absolute;
      right: 10px;
      top: 14px;
      background: none;
      border: none;
      cursor: pointer;
      color: #666;
    }
  </style>
  
  <body>
    <div class="qr-container">
      <h2>SCAN QR TO GET THE MENU</h2>
      <div class="subtext">AHHAR</div>
  
      <div class="bank-info">
        owner username <span class="badge">Retaurant Name</span>
      </div>
  
      <div class="indicator"></div>
  
      <div class="qr-box">
        <img src="<%= qrUrl %>" alt="QR Code">
      </div>
  
      <div class="action-buttons">
        <button><i>üîó</i> SHARE QR</button>
        <button><i>‚¨áÔ∏è</i> DOWNLOAD QR</button>
      </div>
    </div>
  </body>