<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <title>Menu</title>
        <link
            href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
            rel="stylesheet">
        <link rel="stylesheet"
            href="https://fonts.googleapis.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@24,400,0,0&icon_names=arrow_back_ios_new" />
        <style>
        .material-symbols-outlined {
            text-decoration: none;
            color: black;
            cursor: pointer;
            font-variation-settings:
            'FILL' 0,
            'wght' 400,
            'GRAD' 0,
            'opsz' 24
        }
        body {
            background-color: #fff9e6; /* Light yellow background */
            font-family: 'Poppins', sans-serif;
        }
        .back-btn {
            margin: 10px;
            border: none;
            background: none;
            font-size: 20px;
            color: black;
            display: flex;
            align-items: center;
            font-family: 'Poppins', sans-serif;
        }
        .nav-pane {
            background-color: #ffedcc; /* Slightly darker yellow */
            padding: 10px;
            border-radius: 10px;
        }
        .nav-pills .nav-link {
            color: grey;
        }
        .nav-pills .nav-link.active {
            background-color: yellow;
            color: black;
        }
        .menu-items {
            background-color: #fff3d6; /* Slightly darker than body */
            padding: 20px;
            border-radius: 10px;
            margin-top: 15px;
        }
        .item-card {
            border-radius: 10px;
            box-shadow: 2px 2px 10px rgba(0, 0, 0, 0.1);
            text-align: center;
            background: white;
            padding: 10px;
        }
        .item-card img {
            width: 100%;
            border-radius: 10px;
        }
        .price {
            font-weight: bold;
            color: green;
        }
        .menu-btn{
            margin-right: 1rem;
        }
    </style>
    </head>
    <body>
        <div class="container mt-3">
            <span class="back-btn">
                <a href="/" class="material-symbols-outlined">
                    arrow_back_ios_new
                </a>
            </span>

            <div class="nav-pane">
                <div class="nav nav-pills" id="categoryTabs" role="tablist">
                    <% menu.categories.forEach((category, index) => { %>
                    <button class="nav-link <%= index === 0 ? 'active' : '' %>"
                        id="tab-<%= index %>" data-bs-toggle="pill"
                        data-bs-target="#category-<%= index %>" type="button"
                        role="tab">
                        <%= category.name %>
                    </button>
                    <% }) %>
                </div>
            </div>

            <div class="menu-items">
                <div class="tab-content" id="categoryContent">
                    <% menu.categories.forEach((category, index) => { %>
                    <div
                        class="tab-pane fade <%= index === 0 ? 'show active' : '' %>"
                        id="category-<%= index %>" role="tabpanel">
                        <div class="row">
                            <% category.items.forEach(item => { %>
                            <div class="col-lg-3 col-md-4 col-sm-6 mb-4">
                                <div class="item-card p-3">
                                    <img
                                        src="<%= item.imageUrl || 'https://via.placeholder.com/200' %>"
                                        alt="<%= item.name %>">
                                    <h3><%= item.name %></h3>
                                    <p><%= item.description %></p>
                                    <p class="price">Â£<%= item.price %></p>
                                </div>
                            </div>
                            <% }) %>
                        </div>
                    </div>
                    <% }) %>
                </div>
            </div>

            <% if(currUser && currUser._id == currUserId) { %>
            <div class="d-flex mt-2">
                <form action="/menu/<%=currUserId %>/qrcode" method="GET">
                    <button type="submit"
                        class="btn btn-primary menu-btn">Generate your
                        QR Code</button>
                </form>
                <form action="/menu/<%=currUserId %>/edit" method="GET">
                    <button type="submit" class="btn btn-warning">Edit</button>
                </form>
            </div>
            <% } %>
        </div>

        <script
            src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
</html>
