<% layout('layout/boilerplate') %>

<div class="login-body">
	<div class="main">  	
		<input class="login-input" type="checkbox" id="chk" aria-hidden="true">

			<div class="signup">
				<form action="/user/signup" method="post">
					<label class="login-label" for="chk" aria-hidden="true">Sign up</label>
					<input class="login-input" type="text" name="username" placeholder="User name" required>
					<input class="login-input" type="email" name="email" placeholder="Email" required>
					<input class="login-input" type="password" name="password" placeholder="Password" required>
					<button class="login-button" type="submit">Sign up</button>
				</form>
			</div>

			<div class="login">
				<form action="/user/login" method="post">
					<label class="login-label" for="chk" aria-hidden="true">Login</label>
					<input class="login-input" type="username" name="username" placeholder="Username" required>
					<input class="login-input" type="password" name="password" placeholder="Password" required>
					<button class="login-button">Login</button>
				</form>
			</div>
	</div>
</div>